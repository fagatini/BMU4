<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения, наследуемая от AppCompat -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Цвет фона для активности -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Цвет текста для кнопок и заголовков -->
        <item name="android:textColorPrimary">@color/primary_text_color</item>

        <!-- Цвет текста для второстепенных элементов -->
        <item name="android:textColorSecondary">@color/secondary_text_color</item>

        <!-- Цвет акцента, который будет использоваться для элементов, таких как кнопки -->
        <item name="colorAccent">@color/accent_color</item>

        <!-- Цвет заголовков для действий -->
        <item name="android:colorPrimary">@color/primary_color</item>

        <!-- Цвет второстепенных заголовков -->
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>

        <!-- Настройка шрифта для всего приложения -->
        <item name="android:typeface">sans</item>

        <!-- Другие кастомизации -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Пример кастомного стиля для кнопки -->
    <style name="CustomButtonStyle">
        <item name="android:textColor">@color/button_text_color</item>
    </style>
</resources>
